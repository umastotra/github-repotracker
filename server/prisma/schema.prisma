generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Repository {
  id             Int      @id @default(autoincrement())
  owner          String
  name           String
  createdAt      DateTime @default(now())

  @@unique([owner, name], name: "name_owner")
}